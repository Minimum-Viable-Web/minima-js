{
  "name": "@minimum-viable-web/minimajs",
  "version": "1.0.7",
  "description": "Ultra-lightweight modern web framework - React alternative with short API syntax, zero dependencies, built-in SSR, and LLM-optimized development experience",
  "main": "src/minima.js",
  "module": "src/minima.js",
  "type": "module",
  "types": "src/minima.d.ts",
  "exports": {
    ".": {
      "types": "./src/minima.d.ts",
      "import": "./src/minima.js",
      "development": "./src/minima.js",
      "production": "./dist/minima.min.js"
    },
    "./core": {
      "import": "./src/minima-core.js",
      "production": "./dist/minima-core.min.js"
    },
    "./template": {
      "import": "./src/minima-template.js",
      "production": "./dist/minima-template.min.js"
    },
    "./component": {
      "import": "./src/minima-component.js",
      "production": "./dist/minima-component.min.js"
    },
    "./ssr": {
      "import": "./src/minima-ssr.js",
      "production": "./dist/minima-ssr.min.js"
    },
    "./api": {
      "import": "./src/minima-api.js",
      "production": "./dist/minima-api.min.js"
    },
    "./llm": {
      "import": "./src/minima-llm.js",
      "production": "./dist/minima-llm.min.js"
    },
    "./devtools": {
      "import": "./src/minima-devtools.js",
      "production": "./dist/minima-devtools.min.js"
    }
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:minify",
    "build:minify": "node build.js",
    "test": "node test.js",
    "dev": "python -m http.server 8080 || npx serve .",
    "prepublishOnly": "npm run build && npm test",
    "size": "node -e \"console.log('Bundle sizes:'); require('fs').readdirSync('dist').forEach(f => console.log(f + ':', Math.round(require('fs').statSync('dist/' + f).size/1024) + 'KB'))\""
  },
  "keywords": [
    "framework",
    "virtual-dom",
    "reactive",
    "lightweight",
    "zero-dependencies",
    "shortest-api",
    "modern",
    "ssr",
    "react-alternative",
    "vue-alternative",
    "llm-optimized",
    "ai-friendly",
    "typescript",
    "hooks",
    "components",
    "templates",
    "18kb"
  ],
  "author": {
    "name": "MinimaJS Team"
  },
  "license": "MIT",
  "homepage": "https://github.com/Minimum-Viable-Web/minima-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Minimum-Viable-Web/minima-js.git"
  },
  "bugs": {
    "url": "https://github.com/Minimum-Viable-Web/minima-js/issues"
  },
  "browser": "dist/minima.min.js",
  "unpkg": "dist/minima.min.js",
  "jsdelivr": "dist/minima.min.js",
  "dependencies": {},
  "devDependencies": {},
  "peerDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
